<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FriendsOfFriendsActivity">

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/foobook_logo" />

    <TextView
        android:id="@+id/friendsOfFriendTitle"
        style="@style/pageTitle"
        android:textAlignment="center"
        android:textSize="30dp"
        android:paddingTop="90dp"
        android:layout_centerHorizontal="true"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/friendsOfFriendRecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/friendsOfFriendTitle"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        tools:listitem="@layout/item_friend_of_friend" />

</RelativeLayout>
